# Environment Variables Template
# Copy this to .env and fill in your values

# Database Configuration (PostgreSQL - Neon)
DB_TYPE=postgres
DB_HOST=your-neon-host.neon.tech
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=neondb
DB_PORT=5432

# SQLite fallback (used when DB_HOST/DB_USER not set)
DB_PATH=./finance_tracker.db

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_change_in_production
JWT_EXPIRES_IN=1h

# Session Configuration (for OAuth)
SESSION_SECRET=your_very_secure_session_secret_change_in_production

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting (Optional - has defaults)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# OpenAI Configuration (Optional - enables AI insights)
OPENAI_API_KEY=your-openai-api-key

# SMTP Email Configuration (Optional - Gmail App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Personal Finance Tracker

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ===========================================
# Setup Instructions:
# 1. Copy this file to .env
# 2. Fill in your PostgreSQL/Neon credentials
# 3. Generate a strong JWT_SECRET (32+ characters)
# 4. Run migrations: npm run migrate
# 5. Start server: npm run dev
# ===========================================